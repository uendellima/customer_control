generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id           Int       @id @default(autoincrement())
  nome         String
  dataRegistro DateTime  @default(now())
  contatos     Contato[]
}

model Contato {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String?
  telefone  String?
  clienteId Int
  cliente   Cliente @relation(fields: [clienteId], references: [id])
}